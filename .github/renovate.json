{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":disableDependencyDashboard"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest",
        "pinDigest"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "customDatasources": {
    "cdnjs": {
      "defaultRegistryUrlTemplate": "https://api.cdnjs.com/libraries/{{packageName}}?fields=version",
      "transformTemplates": [
        "{\"releases\":[{\"version\":version}]}"
      ],
      "format": "json"
    }
  },
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "json",
      "datasourceTemplate": "custom.cdnjs",
      "managerFilePatterns": [
        "/libman.json/"
      ],
      "matchStrings": [
        "libraries.{ \"packageName\": $replace(library, /@.*/, \"\"), \"currentValue\": $replace(library, /.*@/, \"\") }"
      ]
    }
  ]
}